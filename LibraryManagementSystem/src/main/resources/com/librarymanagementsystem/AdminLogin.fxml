<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="271.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.librarymanagementsystem.controller.AdminLoginController">
   <children>
      <Label layoutX="54.0" layoutY="14.0" text="Admin Login">
         <font>
            <Font name="Juice ITC" size="46.0" />
         </font>
      </Label>
      <TextField fx:id="txtUserName" layoutX="14.0" layoutY="103.0" promptText="User Name">
         <font>
            <Font name="Juice ITC" size="37.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <Button layoutX="17.0" layoutY="310.0" mnemonicParsing="false" onAction="#btnLogin" text="Login">
         <font>
            <Font name="Juice ITC" size="29.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button layoutX="170.0" layoutY="310.0" mnemonicParsing="false" onAction="#btnBack" prefHeight="58.0" prefWidth="82.0" text="Back">
         <font>
            <Font name="Juice ITC" size="28.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <PasswordField fx:id="txtPassword" layoutX="14.0" layoutY="200.0" promptText="Password">
         <font>
            <Font name="Juice ITC" size="37.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </PasswordField>
   </children>
</AnchorPane>
