<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.librarymanagementsystem.controller.BookEditDeleteController">
   <children>
      <Label layoutX="171.0" layoutY="14.0" text="Book Edit or Delete">
         <font>
            <Font name="Comic Sans MS" size="28.0" />
         </font>
      </Label>
      <Pane layoutX="15.0" layoutY="63.0" prefHeight="62.0" prefWidth="571.0" style="-fx-background-color: #CCCCFF;">
         <children>
            <TextField fx:id="txtCodeToSearch" layoutX="63.0" layoutY="12.0" prefHeight="39.0" prefWidth="356.0" promptText="Enter book code to search">
               <font>
                  <Font name="Comic Sans MS" size="12.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </TextField>
            <Button layoutX="444.0" layoutY="12.0" mnemonicParsing="false" onAction="#btnSearch" prefHeight="39.0" prefWidth="54.0" text="Search">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </Pane>
      <TextField fx:id="txtTitle" layoutX="183.0" layoutY="147.0" promptText="Title">
         <font>
            <Font name="Comic Sans MS" size="13.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <ComboBox fx:id="cmbAuthors" layoutX="198.0" layoutY="223.0" prefWidth="150.0" promptText="Choose Author">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ComboBox>
      <ComboBox fx:id="cmbCategory" layoutX="197.0" layoutY="296.0" prefWidth="150.0" promptText="Choose Category">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ComboBox>
      <Button layoutX="109.0" layoutY="354.0" mnemonicParsing="false" onAction="#btnEdit" text="Edit">
         <font>
            <Font name="Comic Sans MS" size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button layoutX="253.0" layoutY="354.0" mnemonicParsing="false" onAction="#btnDelete" text="Delete">
         <font>
            <Font name="Comic Sans MS" size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button layoutX="412.0" layoutY="354.0" mnemonicParsing="false" onAction="#btnBack" text="Back">
         <font>
            <Font name="Comic Sans MS" size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
